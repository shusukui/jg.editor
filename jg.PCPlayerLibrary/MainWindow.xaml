                            <Grid>
                                <Rectangle Fill="{TemplateBinding Background}"
                                  Name="PART_Track" />
                                <Rectangle Fill="{TemplateBinding Foreground}"
                                  Name="PART_Indicator"
                                  HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

